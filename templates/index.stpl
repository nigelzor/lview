<!DOCTYPE html>
<html lang="en">
<head>
    <title>lview</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <style>
        body {
            margin: 0;
            padding: 0;
            background-color: white;
        }

        h1 {
            text-align: center;
        }

        table {
            margin: 0 auto;
            border-collapse: collapse;
        }

        td {
            padding: 0.1rem 0.5rem;
        }

        tbody tr td:nth-child(4) {
            text-align: center;
        }

        tbody tr td:nth-child(5) {
            text-align: right;
        }
    </style>
</head>
<body>
<a href="/"><h1>lview</h1></a>
<table>
    <thead>
    <tr>
        <th>Name</th>
        <th>Theme</th>
        <th>Year</th>
        <th>Pages</th>
        <th>Size</th>
    </tr>
    </thead>
    <tbody>
    <% for file in files { %>
    <tr>
        <td><a href="view/<%= file.relative_path %>"><%= file.name %></a></td>
        <td>
            <% for (i, genre) in file.genres().iter().enumerate() { %>
            <% if i > 0 { %>
            /
            <% } %>
            <a href="<%= genre_search_url(genre) %>"><%= genre %></a>
            <% } %>
        </td>
        <td><a href="<%= year_search_url(file.year()) %>"><%= file.year() %></a></td>
        <td><%= file.pages %></td>
        <td><%= format_bytes(file.size) %></td>
    </tr>
    <% } %>
    </tbody>
</table>
</body>
</html>
